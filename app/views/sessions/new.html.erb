<section class="admin-products-new">

  <header class="page-header">
    <h1>Login</h1>
  </header>

  <div class="container" style="width: 800px;">
    <%= form_tag '/login', :class => 'form-inline' do %>
      <div class="form-group mx-sm-3 mb-2">
        Email: <%= text_field_tag :email, nil, class: 'form-control' %>
      </div>
      
      <div class="form-group mx-sm-3 mb-2">
        Password: <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
              
      <%= submit_tag "Login", class: 'btn btn-primary mb-2' %>

    <% end %>
  </div>

</section>